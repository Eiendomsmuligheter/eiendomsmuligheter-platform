FROM node:18-alpine

# Sett arbeidskatalog
WORKDIR /usr/src/app

# Kopier package.json og package-lock.json
COPY package*.json ./

# Installer avhengigheter
RUN npm ci --only=production

# Kopier resten av applikasjonskoden
COPY . .

# Sett milj√∏variabler
ENV NODE_ENV=production

# Eksponer port
EXPOSE 3000

# Start applikasjonen
CMD ["npm", "start"]